<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".reg_frag1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="83sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/roundImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/userreg"
                app:civ_border_width="2dp"
                app:civ_border_color="#FFFF"
                app:civ_border_overlay="true"/>
            <TextView
                android:id="@+id/uploadimagelink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
        <EditText
            android:id="@+id/fnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:background="@drawable/edtdesign"
            android:hint="Enter First Name"
            android:minHeight="48dp"
            android:textSize="12sp"
            android:fontFamily="@font/robotomedium"
            android:inputType="text"
            android:layout_marginBottom="7sp"/>
        <EditText
            android:id="@+id/lnametext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:inputType="text"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:background="@drawable/edtdesign"
            android:hint="Enter Last Name"
            android:minHeight="48dp"
            android:textSize="12sp"
            android:fontFamily="@font/robotomedium"
            android:layout_marginBottom="7sp"/>
        <EditText
            android:id="@+id/pNotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edtdesign"
            android:hint="Enter Phone Number"
            android:inputType="number"
            android:minHeight="48dp"
            android:textSize="12sp"
            android:fontFamily="@font/robotomedium"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/maleradiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"                />
            <RadioButton
                android:id="@+id/femaleradiobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"                />
        </RadioGroup>
        <TextView
            android:id="@+id/radioerror"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:background="@drawable/btndesign"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6777ef"
            android:textColor="#ffff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotomedium"
            android:layout_gravity="center"
            android:text="Already have an Account? Log In"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</FrameLayout>